<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Cabeçalho fixo -->

    <!-- Conteúdo rolável -->
    <LinearLayout
        android:id="@+id/llTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:text="Agendamentos"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/llTitulo"
        app:layout_constraintBottom_toTopOf="@id/llNavegacaoInferior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- CARD 1 -->
            <LinearLayout
                android:id="@+id/llCardAula1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_agendados"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:id="@+id/tvTituloAula1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilates"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescricaoAula1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Descrição da aula"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/llDataHoraAula1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDataHoraAula1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="12/01 - 18:01"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/btnDeletarAgendamento"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@android:drawable/ic_menu_delete" />
                </LinearLayout>
            </LinearLayout>

            <!-- CARD 2 -->
            <LinearLayout
                android:id="@+id/llCardAula2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_agendados"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvTituloAula2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yoga"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescricaoAula2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Descrição da aula"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/llDataHoraAula1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDataHoraAula1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="13/01 - 09:00"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/btnDeletarAgendamento"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@android:drawable/ic_menu_delete" />
                </LinearLayout>
            </LinearLayout>

            <!-- CARD 3 -->
            <LinearLayout
                android:id="@+id/llCardAula3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_agendados"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/tvTituloAula3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zumba"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescricaoAula3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Descrição da aula"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/llDataHoraAula1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDataHoraAula1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="14/01 - 11:00"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/btnDeletarAgendamento"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@android:drawable/ic_menu_delete" />
                </LinearLayout>
            </LinearLayout>

            <!-- CARD 4 -->
            <LinearLayout
                android:id="@+id/llCardAula4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_agendados"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/tvTituloAula4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crossfit"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescricaoAula4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Descrição da aula"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/llDataHoraAula1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDataHoraAula1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="15/01 - 10:30"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/btnDeletarAgendamento"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@android:drawable/ic_menu_delete" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Barra de navegação fixa inferior -->
    <LinearLayout
        android:id="@+id/llNavegacaoInferior"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            android:gravity="center"
            android:drawableTop="@drawable/ic_home"
            android:drawablePadding="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/navFicha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_ficha"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Ficha de Treino" />

        <TextView
            android:id="@+id/navPerfilAdmin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Perfil"
            android:gravity="center"
            android:drawableTop="@drawable/ic_perfil"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
