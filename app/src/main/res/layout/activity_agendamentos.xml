<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agendamentos"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/llCardAula1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/card_agendados"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        >

        <TextView
            android:id="@+id/tvTituloAula1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilates"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescricaoAula1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Descrição da aula"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/llDataHoraAula1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDataAula1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/01" />

            <TextView
                android:id="@+id/tvHoraAula1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text=" 18:01" />

            <TextView
                android:id="@+id/ic_delete"
                android:layout_width="254dp"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/ic_delete" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCardAula2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_agendados"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llCardAula1">

        <TextView
            android:id="@+id/tvTituloAula2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yoga"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescricaoAula2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Descrição da aula"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/llDataHoraAula2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDataAula2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13/01" />

            <TextView
                android:id="@+id/tvHoraAula2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text=" 09:00" />

            <TextView
                android:id="@+id/ic_delete2"
                android:layout_width="254dp"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/ic_delete" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCardAula3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_agendados"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llCardAula2">

        <TextView
            android:id="@+id/tvTituloAula3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zumba"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescricaoAula3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Descrição da aula"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/llDataHoraAula3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDataAula3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14/01" />

            <TextView
                android:id="@+id/tvHoraAula3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text=" 11:00" />

            <TextView
                android:id="@+id/ic_delete3"
                android:layout_width="254dp"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/ic_delete" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCardAula4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_agendados"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llCardAula3">

        <TextView
            android:id="@+id/tvTituloAula4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crossfit"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescricaoAula4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Descrição da aula"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/llDataHoraAula4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDataAula4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/01" />

            <TextView
                android:id="@+id/tvHoraAula4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text=" 10:30" />

            <TextView
                android:id="@+id/ic_delete4"
                android:layout_width="254dp"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/ic_delete" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/agenda_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/llCardAula4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
