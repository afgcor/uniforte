<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@drawable/card_agendados"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvAgendamentoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/satoshi_bold"
        android:textColor="@color/unifor_marinho"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Título da Aula (Ex: Pilates)"/> <TextView
    android:id="@+id/tvAgendamentoDescription"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:fontFamily="@font/satoshi_medium"
    android:textColor="@color/material_dynamic_neutral30"
    android:textSize="14sp"
    android:text="Descrição da aula..."/> <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/tvAgendamentoDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/satoshi_regular"
        android:textColor="@color/unifor_anil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Data: 12/01"/> <TextView
    android:id="@+id/tvAgendamentoTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:fontFamily="@font/satoshi_regular"
    android:textColor="@color/unifor_anil"
    app:layout_constraintStart_toEndOf="@id/tvAgendamentoDate"
    app:layout_constraintTop_toTopOf="@id/tvAgendamentoDate"
    app:layout_constraintBottom_toBottomOf="@id/tvAgendamentoDate"
    android:text="Hora: 18:00"/> <ImageView
    android:id="@+id/ivDeleteAgendamento"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_marginEnd="0dp"
    android:contentDescription="@string/excluir"
    android:src="@drawable/ic_delete"
    app:tint="@color/unifor_marinho"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/tvAgendamentoDate"
    app:layout_constraintBottom_toBottomOf="@id/tvAgendamentoDate" />
</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>